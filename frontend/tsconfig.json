{
    "compilerOptions": {
        "target": "ES2022",
        "sourceMap": true,
        "baseUrl": "./",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "ES2022",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "react-jsx",
        "noEmit": true,
        "types": [
            "vite/client",
            "vitest/globals"
        ],
        "paths": {
            "@api": [
                "src/api"
            ],
            "@hooks": [
                "src/hooks"
            ],
            "@pages": [
                "src/pages"
            ],
            "@types": [
                "src/types"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}
